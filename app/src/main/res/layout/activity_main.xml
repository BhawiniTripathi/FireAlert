<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14dcaa"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/TmpView"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginBottom="210dp"
        android:layout_marginTop="50dp"
        android:textSize="28dp"
        android:gravity="center"
        android:text="WELCOME!"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkTempButton"
        android:layout_width="246dp"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/buttonshape"
        android:text="Check Temperture"
        android:textSize="20dp"
        android:textColor="#EBFCFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TmpView" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="153dp"
        android:layout_height="33dp"
        android:layout_marginBottom="80dp"
        android:checked="false"
        android:gravity="center"
        android:scaleX="2"
        android:scaleY="2"
        android:switchPadding="0dp"
        android:text="Door Security"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textOff="No"
        android:textOn="Yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TmpView" />
</android.support.constraint.ConstraintLayout>
