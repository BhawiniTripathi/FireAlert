<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14dcaa"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/TmpView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_height="86dp"
        android:layout_marginBottom="210dp"
        android:layout_marginTop="100dp"
        android:text="TempDisplayed"
        app:layout_constraintBottom_toTopOf="@+id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkTempButton"
        android:background="@drawable/buttonshape"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:text="Check Temperture"
        android:textColor="#EBFCFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TmpView" />

    <Switch
        android:id="@+id/switch2"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:layout_marginBottom="66dp"
        android:checked="false"
        android:text="Door Security"
        android:textStyle="bold|italic"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TmpView" />
</android.support.constraint.ConstraintLayout>
